    return loadstring(game:HttpGet("https://raw.githubusercontent.com/mknhghv/67/refs/heads/main/ui))()
end)

if not success or not NEKOLib then
    warn("âŒ NEKO UI è¼‰å…¥å¤±æ•—ï¼")
    return
