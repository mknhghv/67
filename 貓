-- 2. è²“æˆ°é¬¥ (ä½¿ç”¨ AddButton)
local Tab1 = Lib:CreateTab("YKæˆ°é¬¥", false)
local btnPVP, btnMOB

btnPVP = Tab1:AddButton("æ‰“æ¶æ¨¡å¼ : OFF", function(self)
    _G.PVP = not _G.PVP
    if _G.PVP then
        _G.MOB = false
        if btnMOB then btnMOB.Text = "  åˆ·æ€ªæ¨¡å¼ : OFF" end
        KillCombat()
        task.wait(0.1)
        _G.FastAttack = true
        loadstring(game:HttpGet("https://raw.githubusercontent.com/mknhghv/67/refs/heads/main/catpvp"))()
    else
        KillCombat()
    end
    self.Text = "  æ‰“æ¶æ¨¡å¼ : " .. (_G.PVP and "ON" or "OFF")
end)

btnMOB = Tab1:AddButton("åˆ·æ€ªæ¨¡å¼ : OFF", function(self)
    _G.MOB = not _G.MOB
    if _G.MOB then
        _G.PVP = false
        if btnPVP then btnPVP.Text = "  æ‰“æ¶æ¨¡å¼ : OFF" end
        KillCombat()
        task.wait(0.1)
        _G.FastAttack = true
        loadstring(game:HttpGet("https://raw.githubusercontent.com/mknhghv/67/refs/heads/main/catmob"))()
    else
        KillCombat()
    end
    self.Text = "  åˆ·æ€ªæ¨¡å¼ : " .. (_G.MOB and "ON" or "OFF")
end)

