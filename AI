local isFastAttackOn = false
local superFastMode = false  -- è¶…ç´šå¿«é€Ÿæ¨¡å¼ (æ›´æ˜“è¢«è¸¢ï¼Œä½†æ›´å¿«)

local function getNetModule()
    local Modules = ReplicatedStorage:FindFirstChild("Modules")
    if Modules then
        return Modules:FindFirstChild("Net")
    end
    return nil
end

local RegisterAttack, RegisterHit

local function initFastAttack()
    local Net = getNetModule()
    if not Net then
        Notify("âŒ ç„¡æ³•æ‰¾åˆ°Netæ¨¡çµ„", Color3.fromRGB(255,0,0), 3)
        return false
    end
    
    RegisterAttack = Net:FindFirstChild("RE/RegisterAttack")
    RegisterHit = Net:FindFirstChild("RE/RegisterHit")
    
    if not RegisterAttack or not RegisterHit then
        Notify("âŒ ç„¡æ³•æ‰¾åˆ°æ”»æ“ŠRemote", Color3.fromRGB(255,0,0), 3)
        return false
    end
    
    return true
end

local function findEnemies()
    local enemies = {}
    local characters = Workspace:FindFirstChild("Characters")
    local enemiesFolder = Workspace:FindFirstChild("Enemies")
    
    local function processFolder(folder)
        if not folder then return end
        for _, enemy in pairs(folder:GetChildren()) do
            if enemy ~= LocalPlayer.Character and enemy:FindFirstChild("Humanoid") and enemy.Humanoid.Health > 0 then
                local head = enemy:FindFirstChild("Head")
                if head then
                    table.insert(enemies, {enemy, head})
                end
            end
        end
    end
    
    processFolder(enemiesFolder)
    processFolder(characters)
    
    return enemies
end

local attackConnection
local function startFastAttack()
    if attackConnection then attackConnection:Disconnect() end
    
    attackConnection = RunService.Heartbeat:Connect(function()
        local enemies = findEnemies()
        if #enemies > 0 then
            local delay = superFastMode and 0 or 0.05  -- è¶…ç´šæ¨¡å¼å¹¾ä¹ç„¡å»¶é²
            RegisterAttack:FireServer(delay)
            
            local parts = {}
            for _, data in pairs(enemies) do
                table.insert(parts, data[2])  -- Head
            end
            
            if #parts > 0 then
                RegisterHit:FireServer(parts[1], parts)  -- ä½¿ç”¨ç¬¬ä¸€å€‹Headä½œç‚ºä¸»è¦ç›®æ¨™
            end
        end
    end)
end

local function stopFastAttack()
    if attackConnection then
        attackConnection:Disconnect()
        attackConnection = nil
    end
end

FastAttackBtn.MouseButton1Click:Connect(function()
    if not initFastAttack() then return end
    
    isFastAttackOn = not isFastAttackOn
    
    if isFastAttackOn then
        startFastAttack()
        FastAttackBtn.BackgroundColor3 = Color3.fromRGB(60,220,60)
        FastAttackBtn.Text = "âš¡ ç„¡é™è·é›¢å¿«é€Ÿæ”»æ“Š [ON]"
        Notify("âš¡ ç„¡é™è·é›¢å¿«é€Ÿæ”»æ“Šå·²é–‹å•Ÿ\næ”»æ“Šæ‰€æœ‰å¯è¦‹æ•µäººï¼ˆç„¡è·é›¢é™åˆ¶ï¼‰", Color3.fromRGB(0,180,0), 3)
    else
        stopFastAttack()
        FastAttackBtn.BackgroundColor3 = Color3.fromRGB(0,150,220)
        FastAttackBtn.Text = "âš¡ ç„¡é™è·é›¢å¿«é€Ÿæ”»æ“Š [OFF]"
        Notify("ğŸ›‘ ç„¡é™è·é›¢å¿«é€Ÿæ”»æ“Šå·²é—œé–‰", Color3.fromRGB(200,0,0), 2)
    end
end)

-- è¶…ç´šå¿«é€Ÿæ¨¡å¼æŒ‰éˆ•
SuperFastBtn.MouseButton1Click:Connect(function()
    superFastMode = not superFastMode
    SuperFastBtn.BackgroundColor3 = superFastMode and Color3.fromRGB(255,50,50) or Color3.fromRGB(255,100,0)
    SuperFastBtn.Text = superFastMode and "ğŸ”¥ è¶…ç´šå¿«é€Ÿæ¨¡å¼ [ON]" or "ğŸ”¥ è¶…ç´šå¿«é€Ÿæ¨¡å¼ [OFF]"
    Notify(superFastMode and "ğŸ”¥ è¶…ç´šå¿«é€Ÿæ¨¡å¼é–‹å•Ÿï¼ˆæ¥µå¿«ï¼Œä½†æ˜“è¢«è¸¢ï¼‰" or "ğŸ”¥ è¶…ç´šå¿«é€Ÿæ¨¡å¼é—œé–‰", superFastMode and Color3.fromRGB(255,100,0) or Color3.fromRGB(150,150,150), 3)
end)

