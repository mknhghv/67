-- é è¨­æŒ‰éˆ•
local presets = {1000, 5000, 10000, math.huge}
local presetTexts = {"1000", "5000", "10000", "âˆ"}
local function createPreset(x, text, value)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 70, 0, 35)
    btn.Position = UDim2.new(0, 10 + x * 78, 0, 170)
    btn.BackgroundColor3 = Color3.fromRGB(85, 170, 255)
    btn.Text = text
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.TextScaled = true
    btn.Font = Enum.Font.GothamSemibold
    btn.Parent = Frame
    local pc = Instance.new("UICorner")
    pc.CornerRadius = UDim.new(0, 8)
    pc.Parent = btn
    btn.MouseButton1Click:Connect(function()
        SpeedBox.Text = text
        speed = value  -- å…¨åŸŸ speed
    end)
end

for i, v in ipairs(presets) do
    createPreset(i-1, presetTexts[i], v)
end

-- ç‹€æ…‹æ¨™ç±¤
local StatusLabel = Instance.new("TextLabel")
StatusLabel.Size = UDim2.new(1, -20, 0, 20)
StatusLabel.Position = UDim2.new(0, 10, 0, 220)
StatusLabel.BackgroundTransparency = 1
StatusLabel.Text = "ç‹€æ…‹: å°±ç·’"
StatusLabel.TextColor3 = Color3.fromRGB(150, 255, 150)
StatusLabel.TextScaled = true
StatusLabel.Font = Enum.Font.Gotham
StatusLabel.TextXAlignment = Enum.TextXAlignment.Left
StatusLabel.Parent = Frame

-- é‚è¼¯è®Šæ•¸
local enabled = false
local speed = 5000
local torqueMultiplier = 10  -- æ‰­åŠ›å€æ•¸ï¼Œè½‰å‘æ›´éˆæ´»
local connection

-- æ›´æ–°é€Ÿåº¦å‡½æ•¸
local function updateSpeed()
    pcall(function()
        local char = player.Character
        if not char then return end
        local found = false
        for _, boat in pairs(workspace.Boats:GetChildren()) do
            local seat = boat:FindFirstChild("VehicleSeat")
            if seat and seat.Occupant and seat.Occupant.Parent == char then
                seat.MaxSpeed = speed
                seat.Torque = (type(speed) == "number" and speed * torqueMultiplier) or math.huge
                found = true
            end
        end
        StatusLabel.Text = found and "ç‹€æ…‹: åŠ é€Ÿä¸­ï¼" or "ç‹€æ…‹: æœªåµæ¸¬èˆ¹éš»"
        StatusLabel.TextColor3 = found and Color3.fromRGB(150, 255, 150) or Color3.fromRGB(255, 200, 100)
    end)
end

-- Toggle åŠŸèƒ½
local function toggle()
    enabled = not enabled
    if enabled then
        ToggleBtn.Text = "é–‹å•Ÿ (ON)"
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(85, 255, 85)
        connection = RunService.Heartbeat:Connect(updateSpeed)
    else
        ToggleBtn.Text = "é—œé–‰ (OFF)"
        ToggleBtn.BackgroundColor3 = Color3.fromRGB(255, 85, 85)
        if connection then
            connection:Disconnect()
            connection = nil
        end
    end
end

ToggleBtn.MouseButton1Click:Connect(toggle)

-- RightShift å¿«é€Ÿåˆ‡æ›
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if gameProcessed then return end
    if input.KeyCode == Enum.KeyCode.RightShift then
        toggle()
    end
end)

-- é€Ÿåº¦è¼¸å…¥
SpeedBox.FocusLost:Connect(function(enterPressed)
    local input = SpeedBox.Text:lower():gsub("%s+", "")  -- å»é™¤ç©ºæ ¼
    if input == "inf" or input == "âˆ" or input == "infinite" then
        speed = math.huge
        SpeedBox.Text = "âˆ"
    else
        local num = tonumber(input)
        if num and num > 0 then
            speed = num
            SpeedBox.Text = tostring(num)
        else
            SpeedBox.Text = (speed == math.huge and "âˆ") or tostring(speed)
        end
    end
end)

-- é—œé–‰
CloseBtn.MouseButton1Click:Connect(function()
    if connection then connection:Disconnect() end
    ScreenGui:Destroy()
end)

print("ğŸš€ Blox Fruits è¶…é€Ÿèˆ¹ GUI å·²è¼‰å…¥ï¼æŒ‰ RightShift åˆ‡æ›ï¼Œæ‹–æ‹½ UI ä½¿ç”¨ï½")
