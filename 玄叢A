-- æ‹–å‹•ç³»çµ±ï¼ˆåŒåŸç‰ˆä¿®å¾©ç‰ˆï¼‰
local dragging = false
local dragInput, dragStart, startPos
titleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = mainFrame.Position
    end
end)
inputService.InputChanged:Connect(function(input)
    if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
        local delta = input.Position - dragStart
        mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)
inputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = false
    end
end)

-- é€šçŸ¥ç³»çµ±ï¼ˆç¾åŒ–ç‰ˆï¼‰
local function notify(msg, color, dur)
    -- åŒåŸç‰ˆä½†åŠ æ¼¸å±¤
    local n = Instance.new("Frame")
    n.Size = UDim2.new(0, 260, 0, 70)
    n.Position = UDim2.new(1, 280, 1, -80)
    n.AnchorPoint = Vector2.new(1,1)
    n.BackgroundColor3 = color or Color3.fromRGB(30, 50, 90)
    n.BackgroundTransparency = 0.2
    n.Parent = screenGui
    local nc = Instance.new("UICorner", n); nc.CornerRadius = UDim.new(0,12)
    local ns = Instance.new("UIStroke", n); ns.Color = Color3.fromRGB(100,200,255); ns.Thickness = 2
    local nl = Instance.new("TextLabel")
    nl.Size = UDim2.new(1,-20,1,-20)
    nl.Position = UDim2.new(0,10,0,10)
    nl.BackgroundTransparency = 1
    nl.Text = msg
    nl.TextColor3 = Color3.new(1,1,1)
    nl.Font = Enum.Font.Gotham
    nl.TextSize = 14
    nl.TextWrapped = true
    nl.Parent = n
    
    tweenService:Create(n, TweenInfo.new(0.3), {Position = UDim2.new(1, -20, 1, -80)}):Play()
    task.delay(dur or 2.5, function()
        tweenService:Create(n, TweenInfo.new(0.2), {Position = UDim2.new(1, 280, 1, -80)}):Play()
        task.wait(0.2); n:Destroy()
    end)
end

-- å¿«é€Ÿæ”»æ“Šæ ¸å¿ƒï¼ˆåŠ ç„¡é™è·é›¢ + å¯èª¿é€Ÿåº¦ï¼‰
local fastAttackModule = nil
local attackDelay = 0.08  -- é è¨­

local function setupFastAttack()
    local Player = game.Players.LocalPlayer
    local ReplicatedStorage = game.ReplicatedStorage
    local Remotes = ReplicatedStorage:WaitForChild("Remotes")
    local Net = Remotes:WaitForChild("Modules"):WaitForChild("Net")
    local RegisterAttack = Net:WaitForChild("RE/RegisterAttack")
    local RegisterHit = Net:WaitForChild("RE/RegisterHit")
    
    -- è§£ APIï¼šç„¡é™ SimulationRadius
    if sethiddenproperty then
        pcall(function()
            sethiddenproperty(Player, "SimulationRadius", math.huge)
        end)
        notify("ğŸŒ æ”»æ“Šè·é›¢å·²è§£é–ç‚ºç„¡é™ï¼ï¼ˆ>2500 studsï¼‰", Color3.fromRGB(0,255,0), 2)
    end

    local FastAttack = {
        Distance = math.huge,
        start = function(self)
            task.spawn(function()
                while task.wait(attackDelay) do
                    if _G.FastAttack then
                        local enemies = {}
                        for _, folder in {workspace.Enemies, workspace.Characters} do
                            for _, enemy in folder:GetChildren() do
                                local head = enemy:FindFirstChild("Head")
                                if head and enemy:FindFirstChild("Humanoid") and enemy.Humanoid.Health > 0 then
                                    table.insert(enemies, head)
                                end
                            end
                        end
                        if #enemies > 0 then
                            RegisterAttack:FireServer(attackDelay)
                            RegisterHit:FireServer(enemies[1], enemies)
                        end
                    end
                end
            end)
        end
    }
    return FastAttack
end

-- UI æŒ‰éˆ• + é€Ÿåº¦æ»‘æ¡¿
local function createBtn(text, icon, posY, color)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -30, 0, 40)
    btn.Position = UDim2.new(0, 15, 0, posY)
    btn.BackgroundColor3 = color
    btn.BackgroundTransparency = 0.3
    btn.Text = icon .. " " .. text
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 15
    btn.Parent = mainFrame
    local bc = Instance.new("UICorner", btn); bc.CornerRadius = UDim.new(0,10)
    local bg = Instance.new("UIGradient", btn)
    bg.Color = ColorSequence.new{ColorSequenceKeypoint.new(0, color), ColorSequenceKeypoint.new(1, color:Lerp(Color3.new(0,0,0), 0.3))}
    return btn
end

local fastBtn = createBtn("å¿«é€Ÿæ”»æ“Š [OFF]", "âš¡", 60, Color3.fromRGB(0, 150, 255))
local piBtn = createBtn("çš®è…³æœ¬", "ğŸ…¿ï¸", 110, Color3.fromRGB(255, 150, 50))

