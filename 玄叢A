sliderFrame.BackgroundTransparency = 1
sliderFrame.Parent = mainFrame

local sliderLabel = Instance.new("TextLabel")
sliderLabel.Size = UDim2.new(1,0,0,20)
sliderLabel.Text = "æ”»æ“Šé€Ÿåº¦: 0.08s (å¯èª¿)"
sliderLabel.TextColor3 = Color3.fromRGB(200,240,255)
sliderLabel.BackgroundTransparency = 1
sliderLabel.Font = Enum.Font.Gotham
sliderLabel.Parent = sliderFrame

local sliderBar = Instance.new("Frame")
sliderBar.Size = UDim2.new(1,0,0,12)
sliderBar.Position = UDim2.new(0,0,0,25)
sliderBar.BackgroundColor3 = Color3.fromRGB(50,80,120)
sliderBar.Parent = sliderFrame
local sbCorner = Instance.new("UICorner", sliderBar); sbCorner.CornerRadius = UDim.new(0,6)

local sliderBtn = Instance.new("TextButton")
sliderBtn.Size = UDim2.new(0,20,0,20)
sliderBtn.Position = UDim2.new((attackDelay-0.05)/0.25, -10, 0, -4)
sliderBtn.BackgroundColor3 = Color3.fromRGB(0,200,255)
sliderBtn.Text = ""
sliderBtn.Parent = sliderBar
local sbtnCorner = Instance.new("UICorner", sliderBtn); sbtnCorner.CornerRadius = UDim.new(1,0)

local sliding = false
sliderBtn.MouseButton1Down:Connect(function()
    sliding = true
end)
inputService.InputChanged:Connect(function(input)
    if sliding and input.UserInputType == Enum.UserInputType.MouseMovement then
        local relX = math.clamp((input.Position.X - sliderBar.AbsolutePosition.X) / sliderBar.AbsoluteSize.X, 0, 1)
        attackDelay = 0.05 + relX * 0.25  -- 0.05 ~ 0.3
        sliderBtn.Position = UDim2.new(relX, -10, 0, -4)
        sliderLabel.Text = string.format("æ”»æ“Šé€Ÿåº¦: %.3fs", attackDelay)
    end
end)
inputService.InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then sliding = false end
end)

-- æŒ‰éˆ•äº‹ä»¶
local isOpen = false
local isFastOn = false

sidebarButton.MouseButton1Click:Connect(function()
    isOpen = not isOpen
    mainFrame.Visible = isOpen
    sidebarButton.Text = isOpen and "âœ–" or "ğŸŒŒ"
    notify(isOpen and "ğŸŒŒ ç„å¢è…³æœ¬å·²é–‹å•Ÿ" or "ğŸŒŒ ç„å¢è…³æœ¬å·²éš±è—", Color3.fromRGB(100,180,255), 1.5)
end)

closeBtn.MouseButton1Click:Connect(function() sidebarButton.MouseButton1Click:Fire() end)

fastBtn.MouseButton1Click:Connect(function()
    if not fastAttackModule then
        fastAttackModule = setupFastAttack()
    end
    isFastOn = not isFastOn
    fastBtn.Text = "âš¡ å¿«é€Ÿæ”»æ“Š [" .. (isFastOn and "ON" or "OFF") .. "]"
    fastBtn.BackgroundColor3 = isFastOn and Color3.fromRGB(0,220,100) or Color3.fromRGB(0,150,255)
    if isFastOn then fastAttackModule:start() end
    notify(isFastOn and "âš¡ ç„¡é™å¿«é€Ÿæ”»æ“Šå·²é–‹å•Ÿï¼" or "ğŸ›‘ å¿«é€Ÿæ”»æ“Šå·²é—œé–‰", isFastOn and Color3.fromRGB(0,255,0) or Color3.fromRGB(255,100,100), 2)
    _G.FastAttack = isFastOn
end)

piBtn.MouseButton1Click:Connect(function()
    notify("ğŸ…¿ï¸ æ­£åœ¨åŠ è¼‰çš®è…³æœ¬...", Color3.fromRGB(255,165,0), 2)
    pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/xiaopi77/xiaopi77/main/QQ1002100032-Roblox-Pi-script.lua"))()
        notify("âœ… çš®è…³æœ¬åŠ è¼‰æˆåŠŸï¼", Color3.fromRGB(0,255,0), 2)
    end)
end)

