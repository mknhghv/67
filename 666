local function Notify(msg, col, dur)
local note = Instance.new("Frame")
note.Size = UDim2.new(0, 300, 0, 90)
note.Position = UDim2.new(1, -320, 1, -110)
note.BackgroundColor3 = Color3.fromRGB(10, 10, 30)
note.Parent = ScreenGui
Instance.new("UICorner", note).CornerRadius = UDim.new(0, 14)
local nStroke = Instance.new("UIStroke", note)
nStroke.Color = col or Color3.fromRGB(120, 180, 255)
nStroke.Thickness = 3
local nText = Instance.new("TextLabel", note)
nText.Size = UDim2.new(1, -30, 1, -20)
nText.Position = UDim2.new(0, 15, 0, 10)
nText.BackgroundTransparency = 1
nText.Text = msg
nText.TextColor3 = Color3.new(1,1,1)
nText.TextSize = 15
nText.Font = Enum.Font.Gotham
nText.TextWrapped = true
TweenService:Create(note, TweenInfo.new(0.4), {Position = UDim2.new(1, -20, 1, -110)}):Play()
task.delay(dur or 4, function()
TweenService:Create(note, TweenInfo.new(0.3), {Position = UDim2.new(1, -320, 1, -110)}):Play()
task.wait(0.3)
note:Destroy()
end)
end
-- ========================
-- UIé–‹é—œå‹•ç•«
-- ========================
local UIVisible = false
local function ToggleUI()
UIVisible = not UIVisible
MainFrame.Visible = true
if UIVisible then
TweenService:Create(MainFrame, TweenInfo.new(0.4, Enum.EasingStyle.Back), {Position = UDim2.new(0.5, -160, 0.5, -140)}):Play()
else
TweenService:Create(MainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Quad), {Position = UDim2.new(0.5, -160, -1, 0)}):Play()
task.delay(0.3, function() if not UIVisible then MainFrame.Visible = false end end)
end
end
ToggleBtn.MouseButton1Click:Connect(ToggleUI)
CloseBtn.MouseButton1Click:Connect(ToggleUI)
-- ========================
-- PVPç„¡é™æ”»æ“Š (ä½¿ç”¨HRP + å¤šé‡æ”»æ“Š)
-- ========================
local isFastAttackOn = false
local RegisterAttack, RegisterHit
local function initFastAttack()
local Modules = ReplicatedStorage:FindFirstChild("Modules")
if not Modules then return false end
local Net = Modules:FindFirstChild("Net")
if not Net then return false end
RegisterAttack = Net:FindFirstChild("RE/RegisterAttack")
RegisterHit = Net:FindFirstChild("RE/RegisterHit")
return RegisterAttack and RegisterHit
end
local function GetPrimaryPart(model)
return model:FindFirstChild("HumanoidRootPart") or model.PrimaryPart
end
local function GetAllTargets()
local targets = {}
local char = LocalPlayer.Character
if not char or not char.PrimaryPart then return targets end
local pos = char.PrimaryPart.Position
for _, folderName in {"Characters", "Enemies"} do
local folder = Workspace:FindFirstChild(folderName)
if folder then
for _, entity in folder:GetChildren() do
if entity ~= char and entity:FindFirstChildOfClass("Humanoid") and entity.Humanoid.Health > 0 then
local part = GetPrimaryPart(entity)
if part then table.insert(targets, part) end
end
end
end
end
for _, player in Players:GetPlayers() do
if player ~= LocalPlayer and player.Character and player.Character:FindFirstChildOfClass("Humanoid") and player.Character.Humanoid.Health > 0 then
local part = GetPrimaryPart(player.Character)
if part then table.insert(targets, part) end
end
end
return targets
end
local attackConn
FastAttackBtn.MouseButton1Click:Connect(function()
if not initFastAttack() then
Notify("âŒ ç„¡æ³•æ‰¾åˆ°æ”»æ“ŠRemote\nè«‹ç¢ºèªåœ¨Blox Fruits", Color3.fromRGB(255,80,80), 4)
return
end
isFastAttackOn = not isFastAttackOn
if isFastAttackOn then
FastAttackBtn.BackgroundColor3 = Color3.fromRGB(0, 180, 0)
FastAttackBtn.Text = "âš¡ ç„¡é™è·é›¢æ”»æ“Š [ON]"
if attackConn then attackConn:Disconnect() end
attackConn = RunService.Heartbeat:Connect(function()
local targets = GetAllTargets()
if #targets > 0 then
RegisterAttack:FireServer()
for _, target in targets do
for i = 1, 3 do
RegisterHit:FireServer(target)
task.wait(0.01)
end
end
end
end)
Notify("âš¡ PVPç„¡é™æ”»æ“Šé–‹å•Ÿï¼\næ‰“ç©å®¶+æ€ª+ç„¡è·é›¢é™åˆ¶", Color3.fromRGB(0,220,0), 4)
else
if attackConn then attackConn:Disconnect() end
FastAttackBtn.BackgroundColor3 = Color3.fromRGB(20, 20, 55)
FastAttackBtn.Text = "âš¡ ç„¡é™è·é›¢å¿«é€Ÿæ”»æ“Š (PVP)"
Notify("ğŸ›‘ æ”»æ“Šå·²é—œé–‰", Color3.fromRGB(220,80,80), 2)
end
end)
