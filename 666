local isSpeedOn = false
local currentSpeed = 100
local originalSpeed = 16
SpeedBox.FocusLost:Connect(function()
local num = tonumber(SpeedBox.Text)
if num and num >= 16 and num <= 500 then
currentSpeed = num
if isSpeedOn and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
LocalPlayer.Character.Humanoid.WalkSpeed = currentSpeed
end
Notify("âœ… é€Ÿåº¦è¨­ç‚º: " .. currentSpeed, Color3.fromRGB(0,200,0), 2)
else
SpeedBox.Text = tostring(currentSpeed)
end
end)
SpeedBtn.MouseButton1Click:Connect(function()
isSpeedOn = not isSpeedOn
local humanoid = LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid")
if isSpeedOn then
if humanoid then
originalSpeed = humanoid.WalkSpeed
humanoid.WalkSpeed = currentSpeed
end
SpeedBtn.BackgroundColor3 = Color3.fromRGB(0, 180, 0)
SpeedBtn.Text = "ğŸƒ è¶…é€Ÿæ¨¡å¼ [ON]"
SpeedAdjust.Visible = true
Notify("ğŸƒ è¶…é€Ÿé–‹å•Ÿ (é€Ÿåº¦: " .. currentSpeed .. ")", Color3.fromRGB(0,220,0), 3)
else
if humanoid then humanoid.WalkSpeed = originalSpeed end
SpeedBtn.BackgroundColor3 = Color3.fromRGB(20, 20, 55)
SpeedBtn.Text = "ğŸƒ è¶…é€Ÿæ¨¡å¼ (å¯èª¿)"
SpeedAdjust.Visible = false
end
end)
LocalPlayer.CharacterAdded:Connect(function(char)
task.wait(1)
if isSpeedOn then
char:WaitForChild("Humanoid").WalkSpeed = currentSpeed
end
end)
