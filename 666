local isSpeedOn = false
local currentSpeed = 50  -- é»˜èªé€Ÿåº¦
local originalSpeed = 16  -- é»˜èªéŠæˆ²é€Ÿåº¦
-- å‰µå»ºé€Ÿåº¦æ»‘å¡Š
local SpeedSliderFrame = Instance.new("Frame")
SpeedSliderFrame.Size = UDim2.new(1, -20, 0, 30)
SpeedSliderFrame.Position = UDim2.new(0, 10, 0, 190)  -- èª¿æ•´ä½ç½®ï¼Œå› ç‚ºåˆªé™¤äº†V4
SpeedSliderFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 60)
SpeedSliderFrame.Visible = false  -- åˆå§‹éš±è—
SpeedSliderFrame.Parent = MainFrame
Instance.new("UICorner", SpeedSliderFrame).CornerRadius = UDim.new(0, 8)
local SpeedLabel = Instance.new("TextLabel")
SpeedLabel.Size = UDim2.new(1, 0, 1, 0)
SpeedLabel.BackgroundTransparency = 1
SpeedLabel.Text = "é€Ÿåº¦: " .. currentSpeed
SpeedLabel.TextColor3 = Color3.new(1,1,1)
SpeedLabel.Font = Enum.Font.Gotham
SpeedLabel.TextSize = 12
SpeedLabel.Parent = SpeedSliderFrame
-- ç°¡å–®æ»‘å¡Šé‚è¼¯ (ä½¿ç”¨TextBoxè¼¸å…¥èª¿æ•´)
local SpeedInput = Instance.new("TextBox")
SpeedInput.Size = UDim2.new(0.3, 0, 1, 0)
SpeedInput.Position = UDim2.new(0.7, 0, 0, 0)
SpeedInput.BackgroundColor3 = Color3.fromRGB(50, 50, 100)
SpeedInput.Text = tostring(currentSpeed)
SpeedInput.TextColor3 = Color3.new(1,1,1)
SpeedInput.Parent = SpeedSliderFrame
Instance.new("UICorner", SpeedInput).CornerRadius = UDim.new(0, 8)
SpeedInput.FocusLost:Connect(function()
local newSpeed = tonumber(SpeedInput.Text)
if newSpeed and newSpeed >= 16 and newSpeed <= 500 then
currentSpeed = newSpeed
SpeedLabel.Text = "é€Ÿåº¦: " .. currentSpeed
if isSpeedOn and LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
LocalPlayer.Character.Humanoid.WalkSpeed = currentSpeed
end
else
SpeedInput.Text = tostring(currentSpeed)
Notify("âš ï¸ é€Ÿåº¦å¿…é ˆåœ¨16-500ä¹‹é–“", Color3.fromRGB(255,150,0), 2)
end
end)
local function toggleSpeed()
isSpeedOn = not isSpeedOn
if isSpeedOn then
if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
originalSpeed = LocalPlayer.Character.Humanoid.WalkSpeed
LocalPlayer.Character.Humanoid.WalkSpeed = currentSpeed
end
SpeedBtn.BackgroundColor3 = Color3.fromRGB(60,220,60)
SpeedBtn.Text = "ðŸƒ è¶…é€Ÿæ¨¡å¼ [ON]"
SpeedSliderFrame.Visible = true
Notify("ðŸƒ è¶…é€Ÿæ¨¡å¼å·²é–‹å•Ÿ (é€Ÿåº¦: " .. currentSpeed .. ")", Color3.fromRGB(0,180,0), 2)
else
if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
LocalPlayer.Character.Humanoid.WalkSpeed = originalSpeed
end
SpeedBtn.BackgroundColor3 = Color3.fromRGB(100,200,100)
SpeedBtn.Text = "ðŸƒ è¶…é€Ÿæ¨¡å¼ [OFF]"
SpeedSliderFrame.Visible = false
Notify("ðŸ›‘ è¶…é€Ÿæ¨¡å¼å·²é—œé–‰", Color3.fromRGB(200,0,0), 2)
end
end
SpeedBtn.MouseButton1Click:Connect(toggleSpeed)
-- ç›£è½è§’è‰²é‡ç”Ÿï¼Œæ¢å¾©é€Ÿåº¦
LocalPlayer.CharacterAdded:Connect(function(char)
task.wait(1)
if isSpeedOn then
char:WaitForChild("Humanoid").WalkSpeed = currentSpeed
end
end)
